
<%= form_for(@user) do |f| %>
  <%= f.label "", "Full Name" %><br>
  <%= f.text_field :name, autocomplete: 'off' %><br><br>

  <%= f.label "", "Email Address" %><br>
  <%= f.email_field :email, autocomplete: 'off' %><br><br>

  <%= f.label "Password"%><br>
  <%= f.password_field :password %><br><br>

  <%= f.label "", "Password Confirmation"%><br>
  <%= f.password_field :password_confirmation %><br><br>

  <%= f.submit "Sign Up" %><br>
<% end %>

<p>or</p>

<%= button_to 'Log in with Google', '/auth/google_oauth2', {class: 'google'} %>
