<%= form_for @message do |f| %>
  <%= f.label "Recipient" %><br>
  <%= f.collection_select :friend_id, @friends, :id, :name, include_blank: true, required: true %><br><br>

  <%= f.label "Message" %><br>
  <%= f.text_area :content, required: true, placeholder: "You should've sent me a WUPHF..." %><br>

  <%= f.submit "Send WUPHF!" %><br>
<% end %>

<p><%= flash[:message] %><p>
